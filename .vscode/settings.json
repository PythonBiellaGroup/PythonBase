{
    "python.pythonPath": "./.venv/bin/python",
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": false,
    "python.linting.enabled": true,
    "python.testing.pytestArgs": ["test"],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "editor.formatOnSave": true,
    "files.autoSave": "afterDelay",
    "python.formatting.provider": "black",
    "autoDocstring.customTemplatePath": ".vscode/google_no_types.mustache",
    "window.title": "PBG PythonBase | ${rootName} ${separator} ${activeEditorShort}",
    "[python]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "files.exclude": {
        "**/__pycache__": true
    },
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#ff4081",
        "activityBar.background": "#280D8E",
        "titleBar.activeBackground": "#3912C6",
        "titleBar.activeForeground": "#FCFCFF"
    },
    "cSpell.language": "en,it",
    "cSpell.customDictionaries": {
        "custom-dictionary-workspace": {
            "name": "custom-dictionary-workspace",
            "path": "${workspaceFolder}/.cspell/custom-dictionary-workspace.txt",
            "addWords": true,
            "scope": "workspace"
        }
    },

    "cSpell.words": [],
}